<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#fff000"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true"
    android:elevation="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:padding="15dp"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/ppUserBlog"
                android:src="@drawable/group"
                android:layout_width="40dp"
                android:layout_height="40dp" />

            <RelativeLayout
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/nameUserBlog"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="Dino Priyano"
                    android:textColor="#FDD835"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/dateBlog"
                    android:layout_alignParentBottom="true"
                    android:layout_width="wrap_content"
                    android:text="Rabu, 27 September 2017"
                    android:layout_gravity="bottom"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="12sp"
                    android:fontFamily="sans-serif"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

        <ImageView
            android:id="@+id/ppBlog"
            android:layout_width="match_parent"
            android:adjustViewBounds="true"
            android:background="#fff000"
            android:src="@drawable/bgtas"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/titleBlog"
            android:layout_width="wrap_content"
            android:layout_margin="15dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textStyle="bold"
            android:textColor="#FDD835"
            android:text="Lorem Ipsum is simply dummy text of the printing and typesetting industry"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>