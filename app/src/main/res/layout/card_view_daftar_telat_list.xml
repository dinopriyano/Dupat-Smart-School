<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="5dp"
    android:elevation="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_marginRight="20dp"
            android:id="@+id/llKelas"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="XI RPL-1"
                android:textSize="18sp"
                android:id="@+id/kelasTerlambat"
                android:textStyle="bold"
                android:fontFamily="@font/convergence"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_toLeftOf="@+id/llKelas"
            android:layout_marginRight="20dp"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:textSize="18sp"
                android:textColor="#000"
                android:id="@+id/namaTerlambat"
                android:fontFamily="@font/convergence"
                android:text="Dino Priyano"
                android:textStyle="bold"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:background="#000000"></View>

            <TextView
                android:layout_width="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/convergence"
                android:id="@+id/ketTerlambat"
                android:text="Telat karena ngoding dlu sebelum sekolah gan"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>