<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    android:background="#fff"
    android:elevation="16dp"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="150dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/ic_doc"
            android:layout_marginBottom="10dp"
            android:src="@drawable/ic_document"
            android:layout_height="150dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_alignBottom="@id/ic_doc"
            android:padding="10dp"
            android:layout_marginBottom="-11dp"
            android:background="#7C000000"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:orientation="vertical"
                android:layout_toLeftOf="@+id/ivDownloadFile"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:textColor="#fff"
                    android:id="@+id/namaFile"
                    android:text="Nama File Disini"
                    android:textSize="16sp"
                    android:singleLine="true"
                    android:ellipsize="start"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textSize="12sp"
                    android:id="@+id/ukuranFile"
                    android:layout_width="wrap_content"
                    android:text="27 mb"
                    android:layout_marginTop="-5dp"
                    android:textColor="#fff"
                    android:layout_height="wrap_content" />

            </LinearLayout>


            <ImageButton
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:id="@+id/ivDownloadFile"
                android:layout_width="30dp"
                android:clickable="true"
                android:foreground="?android:attr/selectableItemBackgroundBorderless"
                android:background="@drawable/shapeoval"
                android:src="@drawable/ic_file_download_black_24dp"
                android:layout_height="30dp"
                tools:ignore="NewApi" />

        </RelativeLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>