<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="300dp"
    app:cardCornerRadius="10dp"
    app:cardUseCompatPadding="true"
    app:contentPadding="3dp"
    app:cardBackgroundColor="#fff"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:elevation="16dp"
    android:layout_height="150dp">

    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:text="Informasi"
            android:id="@+id/txtJdl"
            android:textColor="#494949"
            android:fontFamily="@font/manjari_bold"
            android:textSize="18sp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/txtWkt"
            android:layout_marginTop="-4dp"
            android:textColor="#919191"
            android:layout_below="@+id/txtJdl"
            android:text="2019/10/29 at 7:20"
            android:textSize="12sp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="#666666"
            android:layout_width="wrap_content"
            android:ellipsize="end"
            android:layout_below="@+id/txtWkt"
            android:id="@+id/txtInfo"
            android:layout_marginTop="8dp"
            android:maxLines="3"
            android:text="Bagi siswa yang bernama otong surotong harap datang ke meja piket karena telah di temukan barang hilang milik anda"
            android:layout_height="wrap_content" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>